generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Teachers {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  mobileNumber String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  Students     Students[]
}

model Students {
  id           Int        @id @default(autoincrement())
  name         String
  grade        String
  mobileNumber String
  dateOfBirth  DateTime?  // Ensure this line is present
  address      String?    // Ensure this line is present
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  teacherId    Int?       // Changed to Int for consistency
  Teachers     Teachers?  @relation(fields: [teacherId], references: [id])
  Attendance   Attendance[]
  Payments     Payments[]
}

model Attendance {
  id        Int      @id @default(autoincrement())
  studentId Int
  status    String
  createdAt DateTime @default(now())

  Students  Students @relation(fields: [studentId], references: [id])
}

model ClassSchedule {
  id        Int      @id @default(autoincrement())
  lessonId  Int
  dayOfWeek String
  startTime DateTime
  endTime   DateTime
  frequency String
}

model Payments {
  id          Int      @id @default(autoincrement())
  studentId   Int
  amount      Float
  paymentDate DateTime @default(now())
  status      String

  Students    Students @relation(fields: [studentId], references: [id])
}
